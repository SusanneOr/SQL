# Create your own store! Your store should sell one type of things:
# I created a small lingerie store. 

CREATE TABLE Sales_Lingerie_Feb 
(id INTEGER primary key
, product_name TEXT
, color TEXT
, quantity_sold INTEGER
, price INTEGER
, category TEXT); 

INSERT INTO 
Sales_Lingerie_Feb 
VALUES
(1, "Lissi balconette", "Black", 101, 749, "Bra"),
(2, "Lissi balconette", "White", 80, 749, "Bra"),
(3, "Lissi balconette", "Pink", 30, 749, "Bra"),
(4, "Lissi hipster", "Black", 130, 299, "Brief"),
(5, "Lissi hipster", "White", 50, 299, "Brief"),
(6 , "Lissi hipster", "Pink", 70, 299, "Brief");


# What is the bestselling category in the store?
SELECT category, sum(quantity_sold*price)AS total_revenue
FROM Sales_Lingerie_Feb
GROUP BY category
ORDER BY total_revenue desc;

# Use CASE find out which products perform well and not
SELECT product_name, quantity_sold,
CASE
WHEN quantity_sold >100 THEN "Performing well"
WHEN quantity_sold BETWEEN 50 AND 100 THEN "Performing"
ELSE "Not performing"
END AS Performance
FROM Sales_Lingerie_Feb
ORDER BY Performance;


















